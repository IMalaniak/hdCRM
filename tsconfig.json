{
  "compilerOptions": {
      "esModuleInterop": true,
      "outDir": "./dist",
      "baseUrl": "./",
      "paths": {
        "@/*": [
            "src/*"
        ]
      },
      "removeComments": true,
      "importHelpers": true,
      "experimentalDecorators": true,
      "lib": [
        "es2015"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es5",
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
  },
  "include": [
      "./src/**/*.ts"
  ],
  "exclude": [
      "./src/public/",
      "node_modules"
  ]
}