{
  "name": "crm-server",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node --inspect=5858 -r dotenv/config -r ts-node/register ./src/index.ts",
    "dev": "concurrently \"nodemon\" \"cd webApp && npm start\"",
    "start:watch": "nodemon",
    "build": "tsc",
    "migrate-db": "node_modules/.bin/sequelize db:migrate",
    "prepare-db": "sequelize db:seed:all --env='production'"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "@overnightjs/logger": "^1.1.9",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.3.2",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.13.0",
    "ts-node": "^8.3.0",
    "ts-node-dev": "^1.0.0-pre.40",
    "cors": "*",
    "email-templates": "^6.0.0",
    "jimp": "^0.6.4",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.1",
    "nodemailer": "^6.2.1",
    "passport": "*",
    "passport-jwt": "^4.0.0",
    "sequelize-cli": "^5.5.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.27",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^6.1.1",
    "@types/email-templates": "^6.0.0",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.3.3",
    "@types/multer": "^1.3.9",
    "@types/node": "^12.7.1",
    "@types/passport": "^1.0.1",
    "@types/passport-jwt": "^3.0.1",
    "@types/sequelize": "^4.28.4",
    "@types/validator": "^10.11.2",
    "concurrently": "^4.1.2",
    "eslint": "^6.1.0",
    "eslint-plugin-import": "^2.18.2",
    "nodemon": "^1.19.1",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "webApp"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm start",
    "ext": "ts"
  }
}
