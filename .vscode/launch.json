{
  "version": "0.1.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Server Test",
      "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--config",
        "${workspaceFolder}/server/.mocharc.json",
        "--colors",
        "--recursive",
        "${file}"
      ],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "test"
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha All Server Unit Tests",
      "program": "${workspaceFolder}/server/node_modules/mocha/bin/_mocha",
      "args": [
        "--timeout",
        "999999",
        "--config",
        "${workspaceFolder}/server/.mocharc.json",
        "--colors",
        "--recursive",
        "test/**/*.unit.test.?s?(x)"
      ],
      "cwd": "${workspaceFolder}/server",
      "env": {
        "NODE_ENV": "test"
      },
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
