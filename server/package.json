{
  "name": "crm-server",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "postinstall": "npm run build",
    "start": "node ./dist/index.js",
    "start:dev": "node --inspect=5858 -r dotenv/config -r ts-node/register ./src/index.ts",
    "dev": "concurrently \"nodemon\" \"cd webApp && npm start\"",
    "start:watch": "nodemon",
    "build": "tsc",
    "build:dev": "concurrently \"tsc\" \"cd webApp && npm run build\"",
    "migrate-db": "node_modules/.bin/sequelize db:migrate",
    "prepare-db": "sequelize db:seed:all --env='production'",
    "heroku-postbuild": "cd webApp && npm i && npm run build"
  },
  "heroku-run-build-script": true,
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "^1.6.9",
    "@overnightjs/logger": "^1.1.9",
    "cookie-parser": "^1.4.5",
    "cors": "*",
    "dotenv": "^8.0.0",
    "email-templates": "^6.0.0",
    "express": "^4.17.1",
    "http-status-codes": "^1.3.2",
    "jimp": "^0.16.0",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.1",
    "nodemailer": "^6.2.1",
    "passport": "*",
    "passport-jwt": "^4.0.0",
    "pg": "^7.12.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^5.13.0",
    "sequelize-cli": "^5.5.1",
    "socket.io": "^2.3.0",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44"
  },
  "devDependencies": {
    "@types/bluebird": "3.5.29",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.6",
    "@types/dotenv": "6.1.1",
    "@types/email-templates": "6.0.2",
    "@types/express": "4.17.7",
    "@types/jsonwebtoken": "8.5.0",
    "@types/multer": "1.3.10",
    "@types/node": "12.12.25",
    "@types/passport": "1.0.2",
    "@types/passport-jwt": "3.0.3",
    "@types/sequelize": "4.28.8",
    "@types/socket.io": "2.1.4",
    "@types/validator": "10.11.3",
    "concurrently": "4.1.2",
    "eslint": "6.8.0",
    "eslint-plugin-import": "2.20.0",
    "nodemon": "1.19.4",
    "prettier": "1.19.1",
    "tslint": "5.20.1",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.7.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules",
      "webApp"
    ],
    "watch": [
      "./src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  }
}
