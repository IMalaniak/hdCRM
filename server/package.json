{
  "name": "crm-server",
  "version": "0.1.0",
  "description": "",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node ./dist/index.js",
    "start:dev": "node --inspect=5858 -r dotenv/config -r ts-node/register ./src/index.ts",
    "start:watch": "nodemon",
    "migrate-db": "node_modules/.bin/sequelize db:migrate",
    "prepare-db": "sequelize db:seed:all --env='production'",
    "test": "mocha -r ts-node/register 'test/**/*.ts'"
  },
  "engines": {
    "node": "14.x.x"
  },
  "heroku-run-build-script": true,
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@overnightjs/core": "1.7.5",
    "@overnightjs/logger": "1.1.12",
    "cookie-parser": "1.4.5",
    "cors": "*",
    "email-templates": "7.1.0",
    "express": "4.17.1",
    "http-status-codes": "1.4.0",
    "jimp": "0.16.1",
    "jsonwebtoken": "8.5.1",
    "multer": "1.4.2",
    "nodemailer": "6.4.11",
    "passport": "*",
    "passport-jwt": "4.0.0",
    "pg": "8.3.3",
    "pg-hstore": "2.3.3",
    "sequelize": "6.3.5",
    "socket.io": "2.3.0"
  },
  "devDependencies": {
    "@types/chai": "4.2.12",
    "@types/cookie-parser": "1.4.2",
    "@types/cors": "2.8.7",
    "@types/dotenv": "6.1.1",
    "@types/email-templates": "7.1.0",
    "@types/express": "4.17.8",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mocha": "8.0.3",
    "@types/multer": "1.4.4",
    "@types/node": "12.12.56",
    "@types/passport": "1.0.4",
    "@types/passport-jwt": "3.0.3",
    "@types/socket.io": "2.1.11",
    "@types/validator": "13.1.0",
    "chai": "4.2.0",
    "dotenv": "8.2.0",
    "mocha": "8.1.3",
    "nodemon": "2.0.4",
    "prettier": "2.1.1",
    "sequelize-cli": "6.2.0",
    "ts-node": "8.10.2",
    "ts-node-dev": "1.0.0-pre.62",
    "tslint": "6.1.3",
    "tslint-config-prettier": "1.18.0",
    "typescript": "4.0.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  }
}
